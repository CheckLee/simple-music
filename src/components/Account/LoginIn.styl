@import "~assets/stylus/variable.styl"

.loginin
  display: flex
  flex-direction: column
  position: relative
  .loginin-avatar
    display: flex
    width: 100%
    height: 406px
    justify-content: center
    align-items: center
    .avatar-wrapper
      width: 162px
      height: 162px
      border-radius: 100%
      img
        width: inherit
        height: inherit
        object-fit: fill
  .loginin-actions
    display: flex
    flex-direction: column
    width: 100%
    height: 700px
    justify-content: space-between
    ul.loginin-actions-normal
      width: 100%
      display: flex
      flex-direction: column
      li
        margin: 0 auto
        width: 610px
        height: 94px
        background-color: $color-theme-primary
        color: white
        text-align: center
        line-height: 94px
        margin-bottom: 48px
    .loginin-actions-third
      display: flex
      flex-direction: column
      .divide
        width: 610px
        text-align: center
        margin: 0 auto
        height: 112px
        line-height: 112px
        font-size: $font-size-large-xxxl
        color: $color-text
      ul
        margin: 0 auto
        display: flex
        width: 610px
        justify-content: space-between
        li
          width: 92px
          display: flex
          flex-direction: column
          text-align: center
          .img-wrapper
            width: inherit
            height: 92px
            border-radius: 100%
            background-color: white
            display: flex
            justify-content: center
            align-items: center
            svg
              width: 46px
              height: 46px
              path
                fill: $color-icon
          span
            height: 58px
            line-height: 58px
            font-size: $font-size-large-xxx
            color: $color-text

.nav-panel
  display: flex
  height: 104px
  width: 100%

.toast-wrapper
  position: absolute
  left: 0
  bottom: 90px
  display: flex
  width: 100%
  justify-content: center
  z-index: 2001

.toast-popup-enter-active, .toast-popup-leave-active
  transition: all 0.5s cubic-bezier(0.165, 0.84, 0.44, 1);
  bottom: 90px
  opacity: 1;

.toast-popup-enter, .toast-popup-leave-active
  bottom: -50px
  opacity: 0;
